<!-- item_in_list.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/white"
    >

    <!-- Левый столбец с изображением товара -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_list_image"
            android:layout_width="150dp"
            android:layout_height="228dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/trial"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/item_list_title"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:text="Item Title"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/item_list_price"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="right"
            android:text="Item Price"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- Правый столбец с названием товара -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/item_list_image_right"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="228dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/trial" />

        <TextView
            android:id="@+id/item_list_title_right"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:text="Item Title"
            android:layout_marginHorizontal="20dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_list_price_right"
            android:layout_width="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="right"
            android:layout_height="22dp"
            android:text="Item Price"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>